<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/regionsAndIndustry"
        style="@style/CountryText"
        android:fontFamily="@font/ys_display_regular"
        android:paddingTop="@dimen/padding_14.5"
        android:paddingBottom="@dimen/padding_14.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_max="@dimen/width_max_300dp"
        app:layout_constraintEnd_toStartOf="@id/radioButton"
        tools:text="Москва" />


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/regionsAndIndustry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/regionsAndIndustry" />


</androidx.constraintlayout.widget.ConstraintLayout>