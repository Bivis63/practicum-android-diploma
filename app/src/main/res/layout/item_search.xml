<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_8">

    <FrameLayout
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:background="@drawable/shape_logo">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_1"
            android:src="@drawable/employer_logo_placeholder" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextMedium_22_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Андроид разработчик, Москва" />

        <TextView
            android:id="@+id/company"
            style="@style/TextRegular_16_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Amazon" />

        <TextView
            android:id="@+id/salary"
            style="@style/TextRegular_16_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnPrimary"
            tools:text="от 100 000 Р" />
    </LinearLayout>
</LinearLayout>