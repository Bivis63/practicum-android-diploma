<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tool_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/TextMedium_22_500</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="TextMedium_22_500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextRegular_16_400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextRegular_12_400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="ToolbarIcon" parent="Theme.PracticumAndroidDiploma">
        <item name="selectableItemBackground">@drawable/ic_filter</item>
        <item name="android:colorControlHighlight">?attr/colorControlActivated</item>
    </style>

    <style name="SearchEditText">
        <item name="textAppearanceButton">@style/TextRegular_16_400</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">255</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchJobText">
        <item name="textAppearanceButton">@style/TextRegular_16_400</item>
        <item name="android:background">@drawable/shape_search</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:paddingHorizontal">@dimen/margin_12</item>
        <item name="android:paddingVertical">@dimen/margin_4</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="VacancyRecycler">
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constrainedHeight">true</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="FilterStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="errorEnabled">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_60</item>
    </style>

    <style name="FilterEditTextStyle">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/filter_edittext_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FilterBottomButtonsStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="textAppearanceButton">@style/TextMedium_16_500</item>
    </style>

    <style name="FilterFrameLayoutSettings" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingHorizontal">@dimen/padding_16</item>
        <item name="android:paddingVertical">@dimen/padding_8</item>
        <item name="endIconTint">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSecondaryFixed</item>
        <item name="hintTextAppearance">@style/TextRegular_12_400</item>
        <item name="boxCollapsedPaddingTop">@dimen/padding_8</item>
        <item name="placeholderTextAppearance">@style/TextRegular_16_400</item>
        <item name="placeholderTextColor">?attr/colorOnSecondaryFixed</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="SalaryEditText">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CountryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/TextRegular_16_400</item>
    </style>

    <style name="ArrowSelection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
    </style>

    <style name="BottomNavigationBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_colors</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_colors</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextBold_32_700">
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontWeight">700</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextMedium_16_500">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>