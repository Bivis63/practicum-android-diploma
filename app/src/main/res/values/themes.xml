<resources>

    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Фон -->
        <item name="colorPrimary">@color/white</item>

        <!-- Текст, который находится непосредственно на фоне -->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Строка поиска, неактивные элементы, фон компании на экране вакансии -->
        <!-- ожидаемая ЗП, место работы и отрасль на экране фильтрации -->
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>

        <!-- Вводимый текст в Edit Text -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Подсказки в Edit Text -->
        <item name="colorOnSecondaryFixed">@color/gray</item>

        <!-- Для синих кнопок с белым текстом -->
        <item name="colorSurface">@color/blue</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Для кнопки "Сбросить" и иконки "Избранного" в активном состоянии -->
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="Theme.PracticumAndroidDiploma" parent="Base.Theme.PracticumAndroidDiploma" />
</resources>